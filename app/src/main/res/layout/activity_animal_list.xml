<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="300sp"
                    android:layout_height="600sp"
                    android:layout_margin="30sp"
                    android:id="@+id/cv1"
                    android:backgroundTint="#f6f6f6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="250sp"
                            android:layout_height="250sp"
                            android:layout_marginStart="20sp"
                            android:src="@drawable/deer"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Deer"
                            android:textColor="#000000"
                            android:textSize="@dimen/hiad_text_15_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/hiad_text_12_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp"
                            android:layout_marginStart="@dimen/hiad_5_dp"
                            android:text="@string/deer_string"/>
                    <Button
                        android:id="@+id/btnShowDeer"
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:layout_marginTop="50sp"
                        android:background="@drawable/select_button"
                        android:text="See It"
                        android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="300sp"
                    android:layout_height="600sp"
                    android:layout_margin="30sp"
                    android:id="@+id/cv2"
                    android:backgroundTint="#f6f6f6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="250sp"
                            android:layout_height="250sp"
                            android:layout_marginStart="20sp"
                            android:src="@drawable/dog"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Dog"
                            android:textColor="#000000"
                            android:textSize="@dimen/hiad_text_15_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/hiad_text_12_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp"
                            android:layout_marginStart="@dimen/hiad_5_dp"
                            android:text="@string/dog_string"/>
                        <Button
                            android:id="@+id/btnShowDog"
                            android:layout_width="100sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="50sp"
                            android:background="@drawable/select_button"
                            android:text="See It"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300sp"
                    android:layout_height="600sp"
                    android:layout_margin="30sp"
                    android:id="@+id/cv3"
                    android:backgroundTint="#f6f6f6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="250sp"
                            android:layout_height="250sp"
                            android:layout_marginStart="20sp"
                            android:src="@drawable/tiger"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Tiger"
                            android:textColor="#000000"
                            android:textSize="@dimen/hiad_text_15_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/hiad_text_12_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp"
                            android:layout_marginStart="@dimen/hiad_5_dp"
                            android:text="@string/tiget_string"/>
                        <Button
                            android:id="@+id/btnShowTiger"
                            android:layout_width="100sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="50sp"
                            android:background="@drawable/select_button"

                            android:text="See It"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="300sp"
                    android:layout_height="600sp"
                    android:layout_margin="30sp"
                    android:id="@+id/cv4"
                    android:backgroundTint="#f6f6f6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="250sp"
                            android:layout_height="250sp"
                            android:layout_marginStart="20sp"
                            android:src="@drawable/duck"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Duck"
                            android:textColor="#000000"
                            android:textSize="@dimen/hiad_text_15_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/hiad_text_12_sp"
                            android:layout_marginTop="@dimen/hiad_10_dp"
                            android:layout_marginStart="@dimen/hiad_5_dp"
                            android:text="@string/duck_text"/>
                        <Button
                            android:id="@+id/btnShowDuck"
                            android:layout_width="100sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="50sp"
                            android:background="@drawable/select_button"

                            android:text="See It"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>